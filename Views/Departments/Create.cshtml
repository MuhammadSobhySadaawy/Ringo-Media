@model  Department

@{
    ViewData["Title"] = "Create Department";
}

<h1>Create Department</h1>

<h4>Department</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Logo" class="control-label">Upload Logo</label>
                <input type="file" name="logo" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ParentDepartmentId" class="control-label">Parent Department</label>
                <select asp-for="ParentDepartmentId" class="form-control" asp-items="ViewBag.Departments">
                    <option value=" ">-- Select Parent Department --</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Sub Departments</label>
                <select asp-for="SubDepartments" class="form-control" asp-items="ViewBag.Departments" multiple>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

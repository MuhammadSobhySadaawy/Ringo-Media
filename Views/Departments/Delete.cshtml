@model Department

@{
    ViewData["Title"] = "Delete Department";
}

<h1>Delete Department</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Department</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Logo
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Logo" alt="@Model.Name" width="100" height="100" />
        </dd>
        <dt class="col-sm-2">
            Sub Departments
        </dt>
        <dd class="col-sm-10">
            @foreach (var subDepartment in Model.SubDepartments)
            {
                <p>@subDepartment.Name</p>
            }
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
